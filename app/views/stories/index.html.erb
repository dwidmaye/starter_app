<h1>Listing stories</h1>

<table>
  <thead>
    <tr>
      <th>Goal</th>
      <th>Stakeholder</th>
      <th>Behavior</th>
      <th>Business value</th>
      <th>Complexity value</th>
      <th>Tag</th>
      <th>Assignee</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @stories.each do |story| %>
      <tr>
        <td><%= story.goal %></td>
        <td><%= story.stakeholder %></td>
        <td><%= story.behavior %></td>
        <td><%= story.business_value %></td>
        <td><%= story.complexity_value %></td>
        <td><%= story.tag %></td>
        <td><%= story.assignee %></td>
        <td><%= link_to 'Show', story %></td>
        <td><%= link_to 'Edit', edit_story_path(story) %></td>
        <td><%= link_to 'Destroy', story, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

